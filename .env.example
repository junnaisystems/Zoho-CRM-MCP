# Zoho CRM MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Zoho OAuth Configuration
ZOHO_CLIENT_ID=your_client_id_here
ZOHO_CLIENT_SECRET=your_client_secret_here
ZOHO_REDIRECT_URI=http://localhost:8080/callback
ZOHO_SCOPE=ZohoCRM.modules.ALL,ZohoCRM.settings.ALL,ZohoCRM.users.ALL

# Zoho API Configuration
ZOHO_API_DOMAIN=https://www.zohoapis.com
ZOHO_ACCOUNTS_DOMAIN=https://accounts.zoho.com
ZOHO_API_VERSION=v2

# Token Storage (local file path for storing tokens)
TOKEN_FILE_PATH=.zoho_tokens.json

# Server Configuration
MCP_SERVER_NAME=ZohoCRM
MCP_SERVER_VERSION=1.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/zoho_crm_mcp.log

# Rate Limiting (requests per minute)
RATE_LIMIT=100

# Timeout Configuration (seconds)
REQUEST_TIMEOUT=30